@page
@model LaPasta.Frontend.Razor.Pages.Orders
@{
    ViewData["Title"] = "Orders";
}

<h1>@ViewData["Title"]</h1>

<div class="container">

    @if (Model.OrdersList is { Length: >0 })
    {
        <div class="row justify-content-center">
            <div class="col-6">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Total</th>
                        <th scope="col">Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var order in Model.OrdersList)
                    {
                        <tr>
                            <td>@order.PurchaseDate</td>
                            <td>&euro; @order.Total</td>
                            <td>@order.Status</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <p>No orders.</p>
    }
</div>

@section Scripts {
    @if (Model.HasMessage)
    {
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
            <div id="liveToast" class="toast bg-success" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header border-bottom-0 p-3">
                    <strong class="me-auto">@Model.Message</strong>
                    <small>just now</small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            const toastLiveExample = document.getElementById('liveToast')
            const toast = new bootstrap.Toast(toastLiveExample);
            toast.show();
        </script>

        Model.Message = "";
    }
}
